print "#Some autogenerated code...\n";
my $counter = 0;
while (<>) {
if (/^#/) {
print $_;
}elsif (/([+-])\s+(\d)\s+(\d)\s+(\d)\s+(\d)\s+(\d)\s+(\d)/) {
my $s = $1;
my $i1 = $2;
my $j1 = $3;
my $i2 = $4;
my $j2 = $5;
my $i3 = $6;
my $j3 = $7;
if ($counter == 0) { print "   && "}
$counter ++;
print "$s c_{$i1$j1} c_{$i2$j2} c_{$i3$j3}";
if ($counter == 6) {
  print "\\nonumber \\\\ \n"; 
  $counter = 0;
}


} else {
warn "Unrecognised line: $_\n";
}
}

